// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones
  translations TranslationHistory[]

  @@map("users")
}

model Language {
  id           Int      @id @default(autoincrement())
  code         String   @unique
  name         String
  isLowResource Boolean @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relaciones
  sourceTranslations TranslationHistory[] @relation("SourceLanguage")
  targetTranslations TranslationHistory[] @relation("TargetLanguage")

  @@map("languages")
}

model TranslationHistory {
  id              Int      @id @default(autoincrement())
  sourceText      String   @db.Text
  translatedText  String   @db.Text
  confidenceScore Float?
  createdAt       DateTime @default(now())

  // Relaciones
  userId          Int
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  sourceLanguageId Int
  sourceLanguage   Language @relation("SourceLanguage", fields: [sourceLanguageId], references: [id])
  
  targetLanguageId Int
  targetLanguage   Language @relation("TargetLanguage", fields: [targetLanguageId], references: [id])

  @@map("translation_history")
}

